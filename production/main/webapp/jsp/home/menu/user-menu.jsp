				<form class="am-form">
					<table class="am-table am-table-striped am-table-hover table-main">
						<thead>
							<tr>
								<th class="table-check"><input type="checkbox" /></th>
								<th class="table-id">编号</th>
								<th class="table-title">菜单</th>
								
							
							</tr>
						</thead>
						<tbody>
						<c:forEach items="${children}" var="list" varStatus="varStatus">
							<tr>
								<td><input type="checkbox" /></td>
								<td>${varStatus.index+1}</td>
								<c:choose>
								<c:when test="${list.id=='7'}">
								<td><a href="<%=basePath%>${list.href}?id=<%=user.getId()%>"><span
													class="am-icon-file"></span>${list.name}</a></td>	
								</c:when>
								<c:otherwise>
								<td><a href="<%=basePath%>${list.href}"><span
